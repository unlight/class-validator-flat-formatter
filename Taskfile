#!/bin/bash
PATH="$PWD/node_modules/.bin":$PATH
set -e

build_tsup() {
    set -x
    rm -rfv dist
    npx tsup src/index.ts --format cjs --target es2017 --sourcemap --dts
    cp -fv README.md LICENSE package.json dist
}

commit_lint() {
    if git-branch-is -q -r "^(master)"; then
        commitlint --edit
    else
        true
    fi
}

commit_check() {
    set -x
    from=$(git_last_release_tag)
    commitlint --from $from
}

"$@"
